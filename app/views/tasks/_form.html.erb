<%= form_for(@task) do |f| %>

  <div class="form-group">
    <%= f.label :tittle %>
    <%= f.text_field :tittle, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: "form-control" %>
  </div>

  <% if task.persisted? %>
    <div class="form-group">
      <%= f.check_box :completed %> Completed
    </div>
  <% end %>

  <%= f.submit class: "btn btn-primary"%>
<% end %>