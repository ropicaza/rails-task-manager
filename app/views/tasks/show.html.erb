<div class="d-flex justify-content-between align-items-center">
  <h1> <%= @task.tittle %></h1>
  <%= link_to 'Edit this task', edit_task_path(@task.id), class: "btn btn-primary"  %>
</div>

<p><%= @task.details %></p>

<% if @task.completed %>
  <li><input type="checkbox" checked>This task is completed!</li>
<% else %>
  <li><input type="checkbox" >This task is not completed</li>
<% end %>

