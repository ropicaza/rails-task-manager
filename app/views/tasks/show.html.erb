<h1> <%= @task.tittle %></h1>
<div>
<%= link_to 'Edit this task', edit_task_path(@task.id)  %>
</div>
<div class="container">
  <%= @task.details %>
</div>

  <% if @task.completed %>
    <li><input type="checkbox" checked>This task is completed!</li>
  <% else %>
    <li><input type="checkbox" >This task is not completed</li>
  <% end %>

  <%= link_to 'Back to list!', tasks_path %>